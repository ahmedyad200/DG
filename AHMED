echo -e "\e[38;5;77m    •{ Welcome to source power }•\e[0m"
#!/usr/bin/env bash
cd $HOME/DRAGON
wget https://raw.githubusercontent.com/ahmedyad200/tg-file/master/tg
clear
wget https://raw.githubusercontent.com/BOYKA-DeV/BoykA/BoykA/File/url.lua
clear
wget https://raw.githubusercontent.com/aVAER200/som/main/library/JSON.lua
clear
wget https://raw.githubusercontent.com/DEV-NAG/DEV-NAG/main/File_Libs/redis.lua
clear
wget https://raw.githubusercontent.com/aVAER200/som/main/library/dkjson.lua
clear
wget https://raw.githubusercontent.com/aVAER200/som/main/library/serpent.lua
clear
rm -fr serpent.lua.1
rm -fr JSON.lua.1
rm -fr tg.1
rm -fr dkjson.lua.1
rm -fr serpent.lua.2
rm -fr JSON.lua.2
rm -fr tg.2
rm -fr dkjson.lua.2
echo -e "\033[0;31m\n~ installed library and tg-file \n\033[0m"
install() {
rm -rf $HOME/.telegram-cli
echo -e "\e[38;5;77m    •{ Welcome to install source power }•\e[0m"
if [ "$Version" == "18" ]; then
echo -e "\033[0;31m\n~ Installing Depedencies For Ubuntu 18... \n\033[0m"
cd /lib/x86_64-linux-gnu/ && sudo ln -s libreadline.so.7.0 libreadline.so.6
wget "ibotcorp.com/files/compat-libevent2-5_2.0.21-1ubuntu18_amd64.deb" && sudo dpkg -i compat-libevent2-5_2.0.21-1ubuntu18_amd64.deb
rm compat-libevent2-5_2.0.21-1ubuntu18_amd64.deb
fi
echo -e "\e[38;5;77m    •{ install source power  %10 }•\e[0m"
echo -e "\033[0;31m\n~ Depedencies For Ubuntu 18 has been installed \n\033[0m"
sudo apt-get update -y
sudo apt-get upgrade -y
apt upgrade
echo -e "\e[38;5;77m    •{ install source power  %20 }•\e[0m"
sudo apt-get install software-properties-common -y
sudo add-apt-repository ppa:ubuntu-toolchain-r/test -y
sudo luarocks install luasocket
echo -e "\e[38;5;77m    •{ install source power  %20 }•\e[0m"
sudo luarocks install luasec
sudo luarocks install redis-lua
sudo luarocks install Lua-cURL
echo -e "\e[38;5;77m    •{ install source power  %30 }•\e[0m"
msudo service redis-server start
sudo apt-get install tmux
apt install dnsutils
sudo apt-get install luarocks
echo -e "\e[38;5;77m    •{ install source power  %40 }•\e[0m"
sudo apt-get install g++-4.7 -y c++-4.7
sudo apt-get install libreadline-dev -y libconfig-dev -y libssl-dev -y lua5.2 -y liblua5.2-dev -y lua-socket -y lua-sec -y lua-expat -y libevent-dev -y make unzip git redis-server autoconf g++ -y libjansson-dev -y libpython-dev -y expat libexpat1-dev -y curl -y htop -y
sudo apt-get install screen -y
sudo apt-get install
echo -e "\e[38;5;77m    •{ install source power  %50 }•\e[0m"
sudo apt-get install upstart-sysv
sudo apt-get install libstdc++6 -y
sudo apt-get install lua-lgi -y
echo -e "\e[38;5;77m    •{ install source power  %60 }•\e[0m"
sudo apt-get install libnotify-dev -y
wget http://luarocks.org/releases/luarocks-2.2.2.tar.gz;tar zxpf luarocks-2.2.2.tar.gz;cd luarocks-2.2.2 && ./configure
sudo make bootstrap
sudo luarocks install luasocket
echo -e "\e[38;5;77m    •{ install source power  %70 }•\e[0m"
sudo luarocks install luasec
sudo apt-get install libconfig++9v5 -y 
sudo apt-get install libstdc++6 -y
echo -e "\e[38;5;77m    •{ install source power  %80 }•\e[0m"
sudo add-apt-repository ppa:ubuntu-toolchain-r/test -y 
sudo apt-get install lua-lgi -y  
sudo apt-get install libnotify-dev -y 
sudo apt-get install libreadline-dev libconfig-dev libssl-dev lua5.2 liblua5.2-dev lua-socket lua-sec lua-expat libevent-dev make unzip git redis-server autoconf g++ libjansson-dev libpython-dev expat libexpat1-dev -y
echo -e "\e[38;5;77m    •{ install source power  %90 }•\e[0m"
sudo chmod +x tg
lua DRAGON.lua
sudo chmod +x DRAGON
sudo chmod +x ./DRG
./DRG
}
if [ "$1" = "install" ]; then
install
else
if [ ! -f ./tg ]; then
echo "Tg Is Not Found"
exit 1
fi
sudo chmod +x tg
lua DRAGON.lua
sudo chmod +x DRAGON
sudo chmod +x ./DRG
./DRG
fi
